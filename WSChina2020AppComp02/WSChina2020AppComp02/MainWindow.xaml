<Window x:Class="WSChina2020AppComp02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSChina2020AppComp02"
        mc:Ignorable="d"
        Title="Skills Competetion Management System" Height="450" Width="800" MinHeight="450" MinWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Skills Competetion Management System -->
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>

        <Grid Background="Gray" Grid.Row="1"></Grid>
        <TextBlock x:Name="CountDownBlock" Grid.Row="1" Foreground="LightGray" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Style="{StaticResource BodyText}" Text="? days, ? hours, ? minutes and ? seconds until the WorldSkills
Shanghai 2021 starts."></TextBlock>
    </Grid>
</Window>