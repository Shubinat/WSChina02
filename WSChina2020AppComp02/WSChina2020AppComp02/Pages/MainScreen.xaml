<Page x:Class="WSChina2020AppComp02.Pages.MainScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>



        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
            <Button x:Name="BtnAboutWS" Click="BtnAboutWS_Click"  Content="About Worldskills" Template="{StaticResource Btn}"></Button>
            <Button x:Name="BtnAboutWSChina" Content="About Worldskills China" Template="{StaticResource Btn}" Click="BtnAboutWSChina_Click"></Button>
            <Button x:Name="BtnAboutShangHai" Content="About Shang Hai" Template="{StaticResource Btn}" Click="BtnAboutShangHai_Click"></Button>
        </StackPanel>
        <Button x:Name="BtnLogin" Template="{StaticResource NavigationBtn}" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Login" Click="BtnLogin_Click"></Button>
        
    </Grid>
</Page>
