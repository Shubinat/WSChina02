<Page x:Class="WSChina2020AppComp02.Pages.AboutWorldskillsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="About Worldskills">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>



        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource BodyText}" Text="About Worldskils" Margin="20" FontSize="20px"></TextBlock>
            <Button Template="{StaticResource Btn}" x:Name="BtnHistory" Click="BtnHistory_Click"  Content="History of Worldskills"></Button>
            <Button Template="{StaticResource Btn}" x:Name="BtnCompetention" Click="BtnCompetention_Click" Content="Competention Skills"></Button>
            <Button Template="{StaticResource Btn}" x:Name="BtnPrevios" Click="BtnPrevios_Click" Content="Previous Competitions"></Button>
        </StackPanel>

    </Grid>
</Page>

