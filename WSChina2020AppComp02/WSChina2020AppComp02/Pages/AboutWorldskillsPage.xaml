<Page x:Class="WSChina2020AppComp02.Pages.AboutWorldskillsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="About Worldskills">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Background="Gray"></Grid>
        <StackPanel Orientation="Horizontal">
            <Image Source="/Assets/logo.png" HorizontalAlignment="Left" Stretch="Uniform" StretchDirection="Both"/>
            <Button x:Name="BtnBack" Style="{StaticResource NavigationButton}" Content="Back" ></Button>
        </StackPanel>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20px" Style="{StaticResource TitleText}">WorldSkills China Competetion 2016</TextBlock>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource BodyText}" Text="About Worldskils" Margin="20" FontSize="20px"></TextBlock>
            <Button x:Name="BtnHistory" Content="History of Worldskills"></Button>
            <Button x:Name="BtnCompetention" Content="Competention Skills"></Button>
            <Button x:Name="BtnPrevios" Content="Previous Competention"></Button>
        </StackPanel>

    </Grid>
</Page>

